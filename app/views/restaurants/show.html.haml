%h1= @restaurant.name

= button_to "Add new Table", action: "create", controller: "tables", restaurant_id: @restaurant.id

- if @our_tables.any?
  %h2 Tables
  %table#restaurant-tables{border: 10}
    %tbody
      %tr
        - @our_tables.each do |table|
          %td{data: {reserved: table.reserved?}}
            = link_to "Table ##{table.number}", restaurant_table_reservations_path(@restaurant, table)
